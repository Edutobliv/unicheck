PORT=3000

# Postgres connection (used if DATABASE_URL is not set)
PGHOST=localhost
PGPORT=5432
PGDATABASE=unicheck
PGUSER=postgres
PGPASSWORD=postgres

# Alternatively, a single connection string
# DATABASE_URL=postgres://postgres:postgres@localhost:5432/unicheck

# JWT secret for HS256 endpoints
JWT_SECRET=dev-secret

# Optionally restrict email domains for login (comma-separated, e.g. example.edu,university.edu.mx)
ALLOWED_EMAIL_DOMAINS=

